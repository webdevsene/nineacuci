{% extends 'ninea.html.twig' %}

{% block title %}Sources  de financement {% endblock %}

{% block body %}


<div class="box mt-4">
    <div class="box-header">
        <ul class="nav nav-tabs nav-tabs-left">
            <li class="active">
                <a href="#list" data-toggle="tab"><i class="fas fa-list"></i> 
                     Source de financement 

                </a>
            </li>

        </ul>
    </div>

    <div class="box-content padded">

        <div class="tab-content">            
            <div class="card" style=" margin: 0%;padding: 0%;-webkit-box-shadow:0 1rem 3rem rgba(0,0,0,.175);box-shadow:0 1rem 3rem rgba(0,0,0,.175)">
                <table class="table table-bordered table-striped table-hover ">
                    <thead class="tr_entete">
                        <tr>
                            <th>Code</th>
                            <th>Libelle</th>
                            <th>actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for ni_sourcefinancement in ni_sourcefinancements %}
                        <tr>
                            <td>{{ ni_sourcefinancement.id }}</td>
                            <td>{{ ni_sourcefinancement.libelle }}</td>
                            <td>
                                <a href="{{ path('app_ni_sourcefinancement_edit', {'id': ni_sourcefinancement.id}) }}">
                                    <i class="fas fa-edit"></i>
                                </a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="3">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            
            </div>
                        
        </div>
            
    </div>
    
    <div class="box-footer">
        <a href="{{ path('app_ni_sourcefinancement_new') }}" class=" btn btn-outline-secondary">Ajouter</a>

    </div>
    
</div>


   
{% endblock %}