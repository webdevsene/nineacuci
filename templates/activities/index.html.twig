{% extends 'base.html.twig' %}

{% block title %}Activities index{% endblock %}

{% block body %}
    <h1>Activities index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>ChiffreAffaire</th>
                <th>Pourcentage</th>
                <th>ActivitePrincipale</th>
                <th>ValeurAjoutee</th>
                <th>LibelleActivitePrincipale</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for activity in activities %}
            <tr>
                <td>{{ activity.id }}</td>
                <td>{{ activity.createdAt ? activity.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ activity.updatedAt ? activity.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ activity.chiffreAffaire }}</td>
                <td>{{ activity.pourcentage }}</td>
                <td>{{ activity.activitePrincipale ? 'Yes' : 'No' }}</td>
                <td>{{ activity.valeurAjoutee }}</td>
                <td>{{ activity.libelleActivitePrincipale }}</td>
                <td>
                    <a href="{{ path('activities_show', {'id': activity.id}) }}">show</a>
                    <a href="{{ path('activities_edit', {'id': activity.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('activities_new') }}">Create new</a>
{% endblock %}
