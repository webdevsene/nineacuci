{% extends 'base.html.twig' %}

{% block title %}Activities{% endblock %}

{% block body %}
    <h1>Activities</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ activity.id }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ activity.createdAt ? activity.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ activity.updatedAt ? activity.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>ChiffreAffaire</th>
                <td>{{ activity.chiffreAffaire }}</td>
            </tr>
            <tr>
                <th>Pourcentage</th>
                <td>{{ activity.pourcentage }}</td>
            </tr>
            <tr>
                <th>ActivitePrincipale</th>
                <td>{{ activity.activitePrincipale ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>ValeurAjoutee</th>
                <td>{{ activity.valeurAjoutee }}</td>
            </tr>
            <tr>
                <th>LibelleActivitePrincipale</th>
                <td>{{ activity.libelleActivitePrincipale }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('activities_index') }}">back to list</a>

    <a href="{{ path('activities_edit', {'id': activity.id}) }}">edit</a>

    {{ include('activities/_delete_form.html.twig') }}
{% endblock %}
