{% extends 'base.html.twig' %}

{% block title %}New QVH{% endblock %}

{% block body %}


{{ include('region/_form.html.twig') }}

<!-- ici on ajoute le data-table liste ressource -->
<div class="row">

    <!-- end le data-table liste region -->


    
    <div class="row">
        <div class="col-xl-6">
            <div class="card">
                <div class="card-body">

                    <div class="table-responsive">
                        <table class="table table-hover mb-0">

                            <thead>
                                <tr>
                                    <th data-priority="3">Code Région </th>
                                    <th data-priority="3">Région</th>
                                </tr>
                            </thead>
                            
                            <tbody>
                                {% for q_v_hs in _listRegions %}
                                <tr>
                                   
                                    <td>{{ q_v_hs.codeReg }}</td>
                                    <td>{{ q_v_hs.libelle }}</td>
                                </tr>
                                {% else %}
                                        <tr>
                                            <td colspan="12">Aucun enregistrement trouvé</td>
                                        </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
        </div>
        
        <div class="col-xl-6">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Charger le template </h4>
                     
                    <div class="row">
                        <!-- begin to upload file -->
                        <form  enctype="multipart/form-data" class="form-horizontal d-flex align-items-center justify-content-right" method="post" action="{{ path('cucinin_region_excel_upload')}}">
                                     <div class="form-group">
                                        <!-- <label for="_file" class="control-label col-sm-3">Charger le template</label> -->
                                        <div class="col-sm-9">
                                            <input class="form-control" type="file" name="_file" id="_file" title="Charger un template">
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="col-md-6-offset-2">
                                          <input type="submit" class="btn btn-primary" value="Save">
                                        </div>
                                     </div>
                        </form>
                            
                </div> <!-- end col -->

                </div>
            </div>
        </div>
    </div>
    <!-- end row -->

{% endblock %}
